<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/loginformscreen">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="@color/mod_appbar_color">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/cabin_bold_ttf"
            android:text="@string/inside_protocol_heading"
            android:textColor="@android:color/white"
            android:textSize="8pt" />

        <ImageView
            android:id="@+id/pfn_settings_back_image"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/forwardicon" />

        <TextView
            android:id="@+id/pfn_settings_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:fontFamily="@font/cabin_bold_ttf"
            android:text="@string/inside_protocol_back"
            android:textColor="@android:color/white"
            android:textSize="8pt" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="60dp"
            android:fontFamily="@font/cabin_bold_ttf"
            android:text="@string/the_private_family_network"
            android:textColor="@color/private_family" />
    </RelativeLayout>

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="100dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/cabin_bold_ttf"
                android:text="@string/inside_recomended"
                android:textColor="@android:color/white"
                android:textSize="8pt" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/settings_relative_layout_background"
                android:layout_marginTop="20dp"
                android:weightSum="10">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="2">

                    <RelativeLayout
                        android:id="@+id/profile"
                        android:layout_width="match_parent"
                        android:layout_height="90dp"
                        android:background="@color/settings_relative_layout_background">

                        <TextView
                            android:id="@+id/auto"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="20dp"
                            android:layout_marginTop="13dp"
                            android:fontFamily="@font/cabin_bold_ttf"
                            android:text="@string/inside_automatic"
                            android:textColor="@android:color/white"
                            android:textSize="8pt" />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="20dp"
                            android:layout_marginTop="40dp"
                            android:fontFamily="@font/cabin_bold_ttf"
                            android:text="@string/inside_automatic_description"
                            android:textColor="@android:color/white"
                            android:textSize="6pt" />




                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="90dp"
                        android:background="@color/settings_relative_layout_background">


                        <TextView
                            android:id="@+id/p1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="20dp"
                            android:layout_marginTop="13dp"
                            android:fontFamily="@font/cabin_bold_ttf"
                            android:text="TCP"
                            android:textColor="@android:color/white"
                            android:textSize="8pt" />
                        <!--android:text="@string/inside_ipsec"-->

                        <ImageView
                            android:id="@+id/p1_info"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginRight="20dp"
                            android:layout_marginTop="15dp"
                            android:layout_toLeftOf="@+id/p1"
                            android:src="@android:drawable/ic_dialog_info" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="20dp"
                            android:layout_marginTop="40dp"
                            android:fontFamily="@font/cabin_bold_ttf"
                            android:text="@string/inside_ipsec_description"
                            android:textColor="@android:color/white"
                            android:textSize="6pt" />



                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:background="@color/settings_relative_layout_background">

                        <TextView
                            android:id="@+id/p2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="20dp"
                            android:layout_marginTop="13dp"
                            android:fontFamily="@font/cabin_bold_ttf"
                            android:text="UDP"
                            android:textColor="@android:color/white"
                            android:textSize="8pt" />
                        <!--android:text="@string/inside_ikev2"-->

                        <ImageView
                            android:id="@+id/p2_info"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginRight="20dp"
                            android:layout_marginTop="15dp"
                            android:layout_toLeftOf="@+id/p2"
                            android:src="@android:drawable/ic_dialog_info" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="20dp"
                            android:layout_marginTop="40dp"
                            android:fontFamily="@font/cabin_bold_ttf"
                            android:text="@string/inside_ikev2_description"
                            android:textColor="@android:color/white"
                            android:textSize="6pt" />




                    </RelativeLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_weight="8">

                    <RadioGroup
                        android:id="@+id/radio"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RadioButton
                            android:id="@+id/radioAuto"
                            android:layout_width="match_parent"
                            android:layout_height="90dp"
                            android:layout_alignParentLeft="true"
                            android:layout_marginLeft="20dp"
                            android:buttonTint="@color/white"
                            android:checked="true"
                            android:gravity="center"
                            android:padding="10dp"
                            android:text="" />

                        <RadioButton
                            android:id="@+id/radioTCP"
                            android:layout_width="match_parent"
                            android:layout_height="90dp"
                            android:layout_alignParentLeft="true"
                            android:buttonTint="@color/white"
                            android:gravity="center"
                            android:text="" />

                        <RadioButton
                            android:id="@+id/radioUDP"
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            android:layout_alignParentLeft="true"
                            android:buttonTint="@color/white"
                            android:gravity="center"
                            android:text="" />

                    </RadioGroup>

                </LinearLayout>


            </LinearLayout>



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/cabin_bold_ttf"
                    android:text="@string/inside_manual_protocols"
                    android:textColor="@android:color/white"
                    android:textSize="8pt" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:id="@+id/connect_guide"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_marginTop="20dp"
                    android:background="@color/settings_relative_layout_background">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="13dp"
                        android:fontFamily="@font/cabin_bold_ttf"
                        android:text="@string/inside_show_connect"
                        android:textColor="@android:color/white"
                        android:textSize="8pt" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="40dp"
                        android:fontFamily="@font/cabin_bold_ttf"
                        android:text="@string/inside_show_connect_description"
                        android:textColor="@android:color/white"
                        android:textSize="6pt" />

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/back_back" />

                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:id="@+id/unable_to_connectLayout"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_marginBottom="40dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/settings_relative_layout_background">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="13dp"
                        android:fontFamily="@font/cabin_bold_ttf"
                        android:text="@string/inside_unable_connect"
                        android:textColor="@android:color/white"
                        android:textSize="8pt" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="40dp"
                        android:fontFamily="@font/cabin_bold_ttf"
                        android:text="@string/inside_unable_conn_description"
                        android:textColor="@android:color/white"
                        android:textSize="6pt" />

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/back_back" />

                </RelativeLayout>
            </RelativeLayout>


        </LinearLayout>

    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>