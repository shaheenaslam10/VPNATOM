<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/loginformscreen"
    tools:context="com.next.sheharyar.NetworkTypeActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="@color/mod_appbar_color">

        <TextView
            android:layout_width="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/cabin_bold_ttf"
            android:text="@string/network_type"
            android:textColor="@android:color/white"
            android:textSize="8pt" />

        <ImageView
            android:id="@+id/pfn_settings_back_image"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            android:rotation="180"
            android:background="@drawable/back_button" />

        <TextView
            android:id="@+id/pfn_settings_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="30dp"
            android:fontFamily="@font/cabin_bold_ttf"
            android:text="@string/inside_protocol_back"
            android:textColor="@android:color/white"
            android:textSize="8pt" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="60dp"
            android:fontFamily="@font/cabin_bold_ttf"
            android:text="@string/the_private_family_network"
            android:textColor="@color/private_family" />
    </RelativeLayout>

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="100dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:paddingRight="10dp"
                android:background="@color/settings_relative_layout_background">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="13dp"
                    android:fontFamily="@font/cabin_bold_ttf"
                    android:text="@string/note"
                    android:textColor="@android:color/holo_red_dark"
                    android:textSize="8pt" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="40dp"
                    android:fontFamily="@font/cabin_bold_ttf"
                    android:text="@string/note_description"
                    android:textColor="@android:color/holo_red_dark"
                    android:textSize="6pt" />



            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="10"
                android:paddingRight="10dp"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:background="@color/settings_relative_layout_background">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:orientation="vertical">



                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="90dp"
                        android:background="@color/settings_relative_layout_background">

                        <TextView
                            android:id="@+id/auto"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="13dp"
                            android:fontFamily="@font/cabin_bold_ttf"
                            android:text="@string/inside_automatic"
                            android:textColor="@android:color/white"
                            android:textSize="8pt" />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="40dp"
                            android:fontFamily="@font/cabin_medium_ttf"
                            android:text="@string/net_auto_desc"
                            android:textColor="@android:color/white"
                            android:textSize="6pt" />



                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="90dp"
                        android:background="@color/settings_relative_layout_background">


                        <TextView
                            android:id="@+id/p1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="13dp"
                            android:fontFamily="@font/cabin_bold_ttf"
                            android:text="@string/auto_non_nat_networks"
                            android:textColor="@android:color/white"
                            android:textSize="8pt" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="40dp"
                            android:fontFamily="@font/cabin_medium_ttf"
                            android:text="@string/auto_non_nat_networks_desc"
                            android:textColor="@android:color/white"
                            android:textSize="6pt" />


                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="10dp"
                        android:background="@color/settings_relative_layout_background">

                        <TextView
                            android:id="@+id/p2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="13dp"
                            android:fontFamily="@font/cabin_bold_ttf"
                            android:text="@string/auto_nat_networks"
                            android:textColor="@android:color/white"
                            android:textSize="8pt" />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="40dp"
                            android:fontFamily="@font/cabin_medium_ttf"
                            android:text="@string/auto_nat_networks_desc"
                            android:textColor="@android:color/white"
                            android:textSize="6pt" />


                    </RelativeLayout>



                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="8">

                    <RadioGroup
                        android:id="@+id/radio"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RadioButton
                            android:id="@+id/radioAuto"
                            android:layout_width="match_parent"
                            android:layout_height="90dp"
                            android:buttonTint="@color/white"
                            android:checked="true"
                            android:gravity="center"
                            android:padding="10dp"
                            android:text="" />

                        <RadioButton
                            android:id="@+id/radioTCP"
                            android:layout_width="match_parent"
                            android:layout_height="90dp"
                            android:buttonTint="@color/white"
                            android:gravity="center"
                            android:text="" />

                        <RadioButton
                            android:id="@+id/radioUDP"
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            android:buttonTint="@color/white"
                            android:gravity="center"
                            android:text="" />

                    </RadioGroup>


                </LinearLayout>


            </LinearLayout>



        </LinearLayout>

    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>