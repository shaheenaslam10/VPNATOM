<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Grey"
    android:orientation="vertical"
    android:weightSum="100"
    tools:context="com.next.sheharyar.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="25">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:id="@+id/uppr_back"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/blueglobe">

            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_centerInParent="true"
                android:background="@drawable/startscreenlogo1" />



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Join"
                    android:textColor="@android:color/white"
                    android:textSize="7pt"
                    android:layout_toLeftOf="@+id/center1"
                    android:fontFamily="@font/cabin_bold_ttf"
                    android:gravity="right"/>
                <TextView
                    android:id="@+id/center1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="|"
                    android:textColor="@android:color/white"
                    android:textSize="7pt"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_centerInParent="true"
                    android:fontFamily="@font/cabin_bold_ttf"
                    android:gravity="center"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Benefit"
                    android:layout_toRightOf="@+id/center1"
                    android:textColor="@android:color/white"
                    android:textSize="7pt"
                    android:fontFamily="@font/cabin_bold_ttf"
                    android:gravity="left"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Share"
                    android:textColor="@android:color/white"
                    android:textSize="7pt"
                    android:gravity="right"
                    android:layout_toLeftOf="@+id/center2"
                    android:fontFamily="@font/cabin_bold_ttf"/>
                <TextView
                    android:id="@+id/center2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="|"
                    android:layout_centerInParent="true"
                    android:textColor="@android:color/white"
                    android:textSize="7pt"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:fontFamily="@font/cabin_bold_ttf"
                    android:gravity="center"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Earn"
                    android:layout_toRightOf="@+id/center2"
                    android:textColor="@android:color/white"
                    android:textSize="7pt"
                    android:fontFamily="@font/cabin_bold_ttf"
                    android:gravity="left"/>

            </RelativeLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/security_app_pays"
                    android:textColor="@android:color/white"
                    android:textSize="9pt"
                    android:fontFamily="@font/free"
                    android:gravity="center"/>

        </LinearLayout>

        <LinearLayout
            android:layout_below="@+id/uppr_back"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/cabin_bold_ttf"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="@string/incridible_opertunity"
                android:textColor="#233960"
                android:textSize="8pt"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/cabin_bold_ttf"
                android:layout_marginTop="5dp"
                android:text="@string/gold_standard"
                android:textAlignment="center"
                android:textColor="#858585"
                android:textSize="7pt" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/cabin_bold_ttf"
                android:layout_marginTop="1dp"
                android:text="@string/private_family_network"
                android:textAlignment="center"
                android:textColor="#858585"
                android:textSize="7pt" />



        </LinearLayout>

