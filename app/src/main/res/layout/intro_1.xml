    android:weightSum="100"
    tools:context="com.next.sheharyar.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="25">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:id="@+id/uppr_back"
            android:background="@drawable/blueglobe">

            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_centerInParent="true"
                android:background="@drawable/mainlogo" />

        </RelativeLayout>
        <LinearLayout
            android:layout_below="@+id/uppr_back"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/cabin_bold_ttf"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="@string/military_grade"
                android:textColor="#233960"
                android:textSize="8pt"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/cabin_bold_ttf"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="20dp"
                android:gravity="center"
                android:layout_marginRight="20dp"
                android:text="@string/military_discription"
                android:textAlignment="center"
                android:textColor="#858585"
                android:textSize="7pt" />



        </LinearLayout>

